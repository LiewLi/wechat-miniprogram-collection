.container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 100%;
  justify-content:space-evenly;
  align-content:space-around;
}

.header-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.week {
  display: inline-block;
  width: 90rpx;
  height: 30rpx;
  margin: 10rpx 5rpx 10rpx 5rpx;
  text-align:center;
  font-size: 24rpx;
  font-weight: bold;
}

.item {
  width: 90rpx;
  height: 90rpx;
  margin: 10rpx 5rpx 10rpx 5rpx;
  border-radius: 8rpx; 
  text-align: center;
  display:flex;
  align-content:center;
  font-size: 28rpx;
}

.year {
  font-size: 20rpx;
  font-style: italic;
  text-align: center;
}

.month {
  font-size: 50rpx;
  font-weight: bold;
  text-align:center;
}

.day {
  margin: auto;
}

.item-hidden {
  background-color: clear;
  visibility: hidden;
}

.item-default {
  background-color: #ededed;
  color: #7888aa;
}

.item-positive {
  background-color: #fa5151;
  color: white;
}
.item-neutral {
  background-color: #ffc300;
  color: white;
}
.item-negative {
  background-color: #10aeff;
  color: white;
}

.control-icon {
  width: 64rpx;
  height:64rpx;
}
