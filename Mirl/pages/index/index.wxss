/**index.wxss**/

page {
  background-color: #323232;
}

.tips {
  font-size: 12px;
  color: gray;
}

.item {
  margin: 10rpx 0rpx;
}

.op {
  background-color: #6769ba;
  color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
  display: inline-block;
  margin: 20rpx;
}

.filters {
  margin: 20rpx;
  width: 100%; 
  white-space: nowrap;
}

.op-active {
  transition: 0.2s ease-in-out;
  transform: scale(1.2, 1.2);
  opacity: 1.0;
}
.op-deactive {
  transition: 0.2s ease-in-out;
  transform: scale(0.8, 0.8);
  opacity: 0.5;
}